<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_rawProduct_seeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:textColor="@color/colorSeeAllProduct"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:text="مشاهده همه" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_rawProduct_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:text="جدیدترین محصولات" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rawProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rawProduct_seeAll" />
</merge>